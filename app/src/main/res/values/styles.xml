<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>

    </style>
    <!-- Alternative application theme. -->
    <style name="AppTheme_alt" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <!-- SPINNER DATEPICKER -->
    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker" tools:ignore="NewApi">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <!-- TOOLBAR POPUP THEME -->
    <style name="ThemeOverlay.MyPopUp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- TABLAYOUT TITLE -->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
</resources>
